[user]
	email = {{ .email }}
	name = {{ .name }}
	signingkey = ~/.ssh/github_ed25519.pub

[commit]
	gpgsign = true

[gpg]
	format = ssh

[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[init]
	defaultBranch = main

[pull]
	rebase = true

[core]
	editor = hx
{{ if lookPath "delta" }}
	pager = delta
{{ end }}

{{ if lookPath "delta" }}
[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
{{ end }}
